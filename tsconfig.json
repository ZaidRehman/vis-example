{
  "compilerOptions": {
      "target": "es5",
      "lib": ["es5", "es6", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "isolatedModules": false,
      "jsx": "react",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": false,
      "noImplicitAny": false,
      "noImplicitUseStrict": false,
      "removeComments": true,
      "noLib": false,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
      "node_modules",
      "bower_components",
      "typings/browser",
      "typings/browser.d.ts",
      "bower_components"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
      "rewriteTsconfig": false
  },
}
